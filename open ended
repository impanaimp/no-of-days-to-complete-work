
#include <bits/stdc++.h>
using namespace std;
 
// Function to calculate the time
float calTime(float arr[], int n)
{
    n=2;
    float work = 0;
    for (int i = 0; i < n; i++)
        work += 1 / arr[i];
 
    return 1 / work;
}
 
// Driver Code
int main()
{
    float arr[] = { 8.0 , 10.0 };
    int n = sizeof(arr) / sizeof(arr[0]);
 
    cout << calTime(arr, n) << " Hours";
 
    return 0;
}
